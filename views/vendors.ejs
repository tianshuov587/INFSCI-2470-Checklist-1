    <br/><br/><br/><br/>
    
     <% if (vendor) { %>
    <p style="text-align:center;">There are <%= vendor.length %> vendors in the database.</p>
  <div class="row justify-content-center">  
  <table class="table">
        <% vendor.forEach(function(vendor){ %>
     <div class="card" style="width:60%;">
        <li class="list-group-item">ID: <%= vendor.id %></li>
        <li class="list-group-item">NAME: <%= vendor.name %></li>
        <li class="list-group-item">EMAIL: <%= vendor.email %></li>
        <li class="list-group-item">TEL: <%= vendor.tel %></li>
        <li class="list-group-item">Sign: <%= vendor.sign %></li>
        
      </div>
        <% }); %>
      </tbody>
    </table> </div>
    <% } else { %>
    <p>No vendors in the database.</p>
    <% } %>
    
<br/><br/><br/><br/>
<footer class="container-fluid bg-dark">
<p class="m-0 text-center text-white">Copyright &copy; Venom 2020</p>
